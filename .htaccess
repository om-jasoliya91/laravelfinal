<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*" Header set
    Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS" Header
    set Access-Control-Allow-Headers "Content-Type, Authorization,
    X-Requested-With"
</IfModule>

# Handle preflight OPTIONS requests RewriteEngine On RewriteCond
%{REQUEST_METHOD} OPTIONS RewriteRule ^(.*)$ $1 [R=200,L]
